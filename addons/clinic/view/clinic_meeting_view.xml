<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- FORMVIEW -->
    <record model="ir.ui.view" id="view_calendar_event_form">
        <field name="name">Clinic - Meetings Form</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <div class="oe_title" position="before">                
                <field name="image_medium" widget='image' class="oe_left oe_avatar" options='{"size": [90, 90]}'/>
            </div>
            <div class="oe_title" position="replace">
                <div class="oe_title">
<!--                     <div class="oe_edit_only">
                        <label for="name"/>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <label for="partner_ids" string="Attendees" class="oe_edit_only"/>
                    <h2>
                        <field name="partner_ids" widget="many2manyattendee"
                            context="{'force_email':True}"
                            on_change="onchange_partner_ids(partner_ids)"
                            class="oe_inline"/>
                    </h2> -->

                    <!-- Patient -->
                    <div class="oe_edit_only">
                        <label for="patient_id" class="oe_edit_only"/>
                    </div>
                    <h2>
                        <!-- TODO: solo debe ser requerido en tipo calendar clinic -->
                        <field name="patient_id" required="1" options="{'no_quick_create': True}" quick_create="False"/>
                    </h2>

                    <!-- Responsible -->
                    <div class="oe_edit_only">
                        <!-- TODO: este string debe depender del tipo de calendar -->
                        <label for="user_id" string="Responsible Medic"/>
                    </div>                        
                    <h2>
                        <field name="user_id" options="{'no_create': True}"/>
                    </h2>                        
                    
                    <!-- Assitants -->
                    <label for="user_ids" class="oe_edit_only"/>
                    <h2>
                        <field name="user_ids" widget="many2many_tags" domain="[('is_medic','=',True)]"/> 
                    </h2>
                </div>
            </div>
<!--                 <field name="duration" widget="float_time"
                    on_change="onchange_dates(date,duration,False,allday)"
                    class="oe_inline" attrs="{'invisible': [('allday','=',True)]}"/> -->
            <field name="location" position="before">
                <field name="room_id"/>
                <field name="mail_sent" groups="base.group_no_one"/>
            </field>
        </field>
    </record>
  
    </data>
</openerp>